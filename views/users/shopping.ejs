<% include ../partials/header %>
  <div class="row">
    <div class="col-md-8">
        <h3><%= user.username %>'s Shopping List</h3>
        <% products.forEach(product => { %>
          <div class="col-md-4 col-sm-6">
            <div class="thumbnail card">
              <img src="<%= product.image.url %>" alt="<%= product.name %>">
              <div class="caption">
                <h4 class="caption"><a href="/products/<%= product.id %>"><%= product.name %></a></h4>
				<h4 class="caption">
					$<%= product.price%>/piece
				  </h4>
              </div>
            </div>
          </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>