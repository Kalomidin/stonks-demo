<% include ../partials/header %>
  <header class="jumbotron">
    <h1><img src="https://i.kym-cdn.com/entries/icons/facebook/000/029/959/Screen_Shot_2019-06-05_at_1.26.32_PM.jpg" height="90" width="120">
 Welcome to Stonks!</h1>
    <p>Check and compare products around the world</p>
    <form class="form-inline" action="/products" method="GET">
      <div class="form-group has-feedback">
        <label for="search"></label>
        <input class="form-control" type="text" name="search" placeholder="Search products" autocomplete="off" />
        <span class="glyphicon glyphicon-search form-control-feedback" aria-hidden="true"></span>
      </div>
    </form>
    <hr>
    <a class="pull-right" href="/products/new">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Share New Product
    </a>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% if (noMatch !== null) {%>
      <div class="col-md-12">
        <h4><%= noMatch %></h4>
      </div>
    <% } %>
    <% products.forEach(product => {%>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail card">
          <img class="product__image" data-src="<%= product.image.url %>" alt="<%= product.name %>" />
          <div class="caption">
            <h4 class="caption"><%= product.name %></h4>
          </div>
          <p>
            <a class="btn btn-primary btn-sm btn-b-mg" href="/products/<%= product._id %>">
              More Info
            </a>
          </p>
        </div>
      </div>
    <% })%>
  </div>
<% include ../partials/footer %>
